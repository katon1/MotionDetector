// C++ code
//
int sensorState = 0;

void setup()
{
  pinMode(9, INPUT);
  pinMode(LED_BUILTIN, OUTPUT);
  Serial.begin(9600);
}

void loop()
{
  // read the state of the sensor/digital input
  sensorState = digitalRead(9);
  
  if (sensorState == HIGH) {
    Serial.println("Sensor activated!");
  }
  delay(1000); // Delay a little bit to improve simulation performance
}
